<div class="row">

{{#each posts as |post|}}
<section class="col-12 col-md-3 col-sm-6 text-center posts" data-id="{{post._id}}">

    <h6>Title:</h6>

    <p>
      {{#if post.title}}
        {{post.title}}
      {{else}}
        No title provided.
      {{/if}}
    </p>
    <h6>Description:</h6>
    <p>
      {{#if post.description}}
        {{post.description}}
      {{else}}
        No description provided.
      {{/if}}
    </p>
    <h6>Recipe:</h6>
    <p>
      {{#if post.recipe}}
        {{post.recipe}}
      {{else}}
        No recipe provided.
      {{/if}}
      <h6>Rating:</h6>
      <p>
        {{#if post.rating}}
          {{post.rating}}
        {{else}}
          No rating provided.
        {{/if}}
      </p>
      <p> Post ID:
        {{#if post.id}}
          {{post.id}}
        {{else}}
          No data provided.
        {{/if}}
        {{#if post.editable}}
          {{> remove-post id=post.id}}
        {{/if}}
      </p>
    </p>
  </section>

{{/each}}
</div>
